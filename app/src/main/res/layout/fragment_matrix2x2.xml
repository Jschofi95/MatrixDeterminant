<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="450dp"
            android:text="@string/calculate"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button_calculate"
            />

        <TextView
            android:id="@+id/textview_answer"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_text_box"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toEndOf="@+id/tableLayout2"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35sp">

                <EditText
                    android:id="@+id/editText00"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="10sp"
                    android:ems="10"
                    android:inputType="numberSigned|numberDecimal"

                    android:background="@drawable/custom_text_box"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editText01"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginBottom="10sp"
                    android:ems="10"
                    android:inputType="numberSigned|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"

                    android:background="@drawable/custom_text_box"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText10"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:layout_marginLeft="75sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="10sp"
                    android:ems="10"
                    android:inputType="numberSigned|numberDecimal"

                    android:background="@drawable/custom_text_box"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editText11"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginBottom="10sp"
                    android:ems="10"
                    android:inputType="numberSigned|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"

                    android:background="@drawable/custom_text_box"/>

            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="416dp"
            android:layout_height="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="100dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2x2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="#969696"
            android:text="@string/matrix2x2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button3x3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3"

            android:background="@drawable/custom_button_navigation"/>

        <Button
            android:id="@+id/button3x3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="#D9D9D9"
            android:text="@string/matrix3x3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button2x2"
            app:layout_constraintTop_toBottomOf="@+id/divider3"

            android:background="@drawable/custom_button_navigation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>